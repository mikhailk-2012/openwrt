/dts-v1/;

#include "mt7628an.dtsi"

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "mediatek,hlk7688a", "mediatek,mt7628an-soc";
	model = "HILINK HLK-7688A";

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	aliases {
		serial0 = &uartlite;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x8000000>;
	};

	bootstrap {
		compatible = "mediatek,linkit";

		status = "disabled";
	};

	gpio-leds {
		compatible = "gpio-leds";

		act {
			label = "hlk7688a:green:act";
			gpios = <&gpio0 11 1>;
		};

		wifi {
			label = "mediatek:orange:wifi";
			gpios = <&wgpio 0 0>;
			default-state = "on";
		};
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		wps {
			label = "reset";
			gpios = <&gpio1 5 1>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	wgpio: gpio-wifi {
		compatible = "mediatek,gpio-wifi";
		#address-cells = <1>;
		#size-cells = <0>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "gpio";
			ralink,function = "gpio";
		};

		perst {
			ralink,group = "perst";
			ralink,function = "gpio";
		};

		refclk {
			ralink,group = "refclk";
			ralink,function = "gpio";
		};

		i2s {
			ralink,group = "i2s";
			ralink,function = "gpio";
		};

		spis {
			ralink,group = "spis";
			ralink,function = "gpio";
		};

		wled_kn {
			ralink,group = "wled_kn";
			ralink,function = "gpio";
		};

		wled_an {
			ralink,group = "wled_an";
			ralink,function = "wled_an";
		};

		p0led_an {
			ralink,group = "p0led_an";
			ralink,function = "p0led_an";
		};

		p1led_an {
			ralink,group = "p1led_an";
			ralink,function = "gpio";
		};

		p2led_an {
			ralink,group = "p2led_an";
			ralink,function = "gpio";
		};

		p3led_an {
			ralink,group = "p3led_an";
			ralink,function = "gpio";
		};

		p4led_an {
			ralink,group = "p4led_an";
			ralink,function = "gpio";
		};

		wdt {
			ralink,group = "wdt";
			ralink,function = "gpio";
		};

		uart2 {
			ralink,group = "uart2";
			ralink,function = "gpio";
		};

		pwm0 {
			ralink,group = "pwm0";
			ralink,function = "gpio";
		};

		pwm1 {
			ralink,group = "pwm1";
			ralink,function = "gpio";
		};
	};
};

&wmac {
	status = "okay";
};

&spi0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&spi_pins>, <&spi_cs1_pins>;

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		linux,modalias = "m25p80", "mx25l25635e";
		spi-max-frequency = <40000000>;
		m25p,chunked-io = <31>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0x1fb0000>;
		};
	};

	spidev@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "linux,spidev";
		reg = <1>;
		spi-max-frequency = <40000000>;
	};
};

&i2c {
	status = "okay";
	clock-frequency = <100000>;

	/* RTC - MCP794x */
	mcp7941x: mcp7941x@6f {
		compatible = "microchip,mcp7941x";
		reg = <0x6f>;
	};
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "disabled";
};

&ethernet {
	mtd-mac-address = <&factory 0x28>;
};

&sdhci {
	status = "okay";
	mediatek,cd-low;
};

&wmac {
	status = "okay";
};
